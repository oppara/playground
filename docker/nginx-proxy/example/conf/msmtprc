# Set default values for all following accounts.
defaults
auth off
tls off
tls_trust_file /etc/ssl/certs/ca-certificates.crt
syslog on
aliases /etc/aliases

# MailCatcher
account mailcatcher

# MailCatcher container
host mailcatcher
port 1025
from mailcatcher@example.com
user username
password password

# Set a default account
account default : mailcatcher

